<% content_for :top_links do %>
  <div class="profile_links">
    <%= link_to 'Edit Profile', edit_user_registration_path %>
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
    <%= link_to "Followers",  edit_user_registration_path%>
  </div>
<% end %>
<div id="profile">
  <div>
    <div id="profile_pic">
      profile pic
    </div>
    <%= render @user %>
    <div class="posts">
      <h3>User posts:</h3>
      <%= render @user.posts %>
    </div>
  </div>
  <div class="user_followers">
    <h3>Followers: </h3>
    <%= render "users_followers/followers", followers: @user.accepted_followers %>
    <% if current_user == @user %>
      <h3>Friends request: </h3>
      <%= render "users_followers/followers", followers: @user.pending_followers %>
    <% end %>
    <% if current_user == @user %>
      <h3>Denied request: </h3>
      <%= render "users_followers/followers", followers: @user.denied_followers %>
    <% end %>
    <h3>Following: </h3>
    <%= render "users_followers/followers", followers: @user.accepted_followings %>
    <% if current_user == @user %>
      <h3>Pending followings: </h3>
      <%= render "users_followers/followers", followers: @user.pending_followings %>
    <% end %>
    <% if current_user == @user %>
      <h3>Denied followings: </h3>
      <%= render "users_followers/followers", followers: @user.denied_followings %>
    <% end %>
  </div>
</div>