<div class="user">
  <h2 class="name">Username: <%= user.username %></h2>
  <h3 class="email">Email: <%= user.email %></h3>
  <% unless current_user == user then %>
    <h3 class="link_profile">Profile: <%= link_to "#{user.username.upcase}'s profile", user%></h3>
    <h3><%= link_to "Follow", users_followers_path(user: user), data: {turbo_method: :post}%></h3>
  <% end %>
</div>