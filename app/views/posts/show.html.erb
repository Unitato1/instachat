<%= render @post %>
<br>
<div class="comments">
  <% @comments.each do |comment| %>
    <div class="comment">
      <div>
        <h3>Author: <%= comment.author.username%></h3>
      </div>
      <div>
        <h4>Commented: <%= comment.content %></h4>
        <% if current_user == comment.author then%>
          <ul class="navigation">
            <li><%= link_to "Edit your comment", edit_comment_path(comment, post_id: @post.id)%></li>
            <li><%= link_to "Delete comment", comment_path(comment: comment), data: {turbo_method: :delete}%></li>
          </ul>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
